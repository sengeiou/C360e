<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_1"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp90"
                android:gravity="center"
                android:text="1" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp90"
                android:gravity="center"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp90"
                android:gravity="center"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_4"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp90"
                android:gravity="center"
                android:text="4" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp90"
                android:gravity="center"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp90"
                android:gravity="center"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_7"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp90"
                android:gravity="center"
                android:text="7" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp90"
                android:gravity="center"
                android:text="8" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp90"
                android:gravity="center"
                android:text="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp90"
                android:gravity="center"
                />
            
             <Button
                android:id="@+id/btn_0"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp90"
                android:gravity="center"
                android:text="0" />
             
             <Button
                 android:id="@+id/btn_Delete"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp90"
                android:gravity="center"
                android:text="@string/delete" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_operate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <Button
            android:id="@+id/btn_ClockIn"
            android:layout_width="@dimen/dp120"
            android:layout_height="@dimen/dp180"
            android:gravity="center"
            android:text="@string/clock_in" />

        <Button
            android:id="@+id/btn_ClockOut"
            android:layout_width="@dimen/dp120"
            android:layout_height="@dimen/dp180"
            android:gravity="center"
            android:text="@string/clock_out_btn" />
    </LinearLayout>

  

</LinearLayout>