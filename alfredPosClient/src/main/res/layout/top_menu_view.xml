<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_revenue_center_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="100dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_m" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_set" />

            <LinearLayout
                android:id="@+id/ll_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/iv_setting"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_username" />

                <TextView
                    android:id="@+id/tv_manage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/alfred"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_s" />
            </LinearLayout>

            <View
                android:id="@+id/right_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/ll_manage"
                android:background="@color/bg_gray_line" />

            <LinearLayout
                android:id="@+id/ll_get_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/right_line"
                android:drawableLeft="@android:drawable/ic_menu_manage"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:src="@drawable/icon_get_bill" />

                <TextView
                    android:id="@+id/tv_bill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/get_bill"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_s" />

                <TextView
                    android:id="@+id/tv_get_bill_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bg_title_number"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_s_small"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:id="@+id/left_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/ll_get_bill"
                android:background="@color/bg_gray_line" />

            <LinearLayout
                android:id="@+id/ll_call_waiter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/left_line"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:src="@drawable/icon_call_waiter" />

                <TextView
                    android:id="@+id/tv_waiter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/waiter"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_s" />

                <TextView
                    android:id="@+id/tv_waiter_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bg_title_number"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_s_small"
                    android:visibility="invisible" />
            </LinearLayout>
            
            <View
                android:id="@+id/to_left_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/ll_call_waiter"
                android:background="@color/bg_gray_line" />
            <LinearLayout
                android:id="@+id/ll_net_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/to_left_line"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:src="@drawable/icon_mobileorder" />

                <TextView
                    android:id="@+id/tv_net_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/online_order"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_s" />

                <RelativeLayout
                    android:id="@+id/rl_app_num"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/circle_shape" />

                    <TextView
                        android:id="@+id/tv_app_num"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="999"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/ll_blank"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_search" 
                android:paddingRight="5dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:hint="@string/search_menu"
                    android:paddingBottom="5dp"
                    android:layout_alignLeft="@+id/dash_line"
                    android:layout_alignRight="@+id/dash_line"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#DDDDDD"
                    android:textSize="@dimen/text_size_s" />

                <com.alfredbase.view.DashedLine
                    android:id="@+id/dash_line"
                    android:layout_width="120dp"
                    android:layout_height="8dp"
                    android:layout_below="@id/tv_search"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_search_delete"
                android:visibility="invisible" 
                android:paddingLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>