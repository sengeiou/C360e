<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="100dp"
    android:layout_height="150dp"
    android:background="@color/white"
    android:layout_centerInParent="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/item_name_image_selector"
        android:gravity="center"
        android:padding="1dp"
        android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/item_name_img"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/item_name_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/itemdetail_bg_selector"
        android:textColor="@color/itemdetail_text_selector"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="10sp"
        android:gravity="center"
        android:maxLines="3"
        android:ellipsize="end"/>

    </LinearLayout>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_item_img_num"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:visibility="gone">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/circle_shape" />

        <TextView
            android:id="@+id/tv_item_img_num"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="999"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
