<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_1"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:background="@drawable/box_key_number_selector"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="1" 
                android:textColor="@color/text_color_selector"
                android:textSize="@dimen/text_size_b"/>

            <Button
                android:id="@+id/btn_2"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:background="@drawable/box_key_number_selector"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="2" 
                android:textColor="@color/text_color_selector"
                android:textSize="@dimen/text_size_b"/>

            <Button
                android:id="@+id/btn_3"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:background="@drawable/box_key_number_selector"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="3" 
                android:textColor="@color/text_color_selector"
                android:textSize="@dimen/text_size_b"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_4"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:background="@drawable/box_key_number_selector"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="4" 
                android:textColor="@color/text_color_selector"
                android:textSize="@dimen/text_size_b"/>

            <Button
                android:id="@+id/btn_5"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:background="@drawable/box_key_number_selector"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="5" 
                android:textColor="@color/text_color_selector"
                android:textSize="@dimen/text_size_b"/>

            <Button
                android:id="@+id/btn_6"
               android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:background="@drawable/box_key_number_selector"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="6" 
                android:textColor="@color/text_color_selector"
                android:textSize="@dimen/text_size_b"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_7"
               android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:background="@drawable/box_key_number_selector"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="7" 
                android:textColor="@color/text_color_selector"
                android:textSize="@dimen/text_size_b"/>

            <Button
                android:id="@+id/btn_8"
               	android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:background="@drawable/box_key_number_selector"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="8" 
                android:textColor="@color/text_color_selector"
                android:textSize="@dimen/text_size_b"/>

            <Button
                android:id="@+id/btn_9"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:background="@drawable/box_key_number_selector"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="9" 
                android:textColor="@color/text_color_selector"
                android:textSize="@dimen/text_size_b"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_0"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:background="@drawable/box_key_number_selector"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="0" 
                android:textColor="@color/text_color_selector"
                android:textSize="@dimen/text_size_b"/>

            <Button
                android:id="@+id/btn_00"
                android:layout_width="@dimen/dp170"
                android:layout_height="@dimen/dp80"
                android:background="@drawable/box_key_number_selector"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="00" 
                android:textColor="@color/text_color_selector"
                android:textSize="@dimen/text_size_b"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_operate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_Clear"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:background="@drawable/box_key_number_selector"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"    
            android:text="C" 
            android:textColor="@color/text_color_selector"
            android:textSize="@dimen/text_size_b" />    

        <Button
            android:id="@+id/btn_Enter"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp165"
            android:background="@drawable/box_key_enter_selector"
            android:gravity="center"
            android:text="Enter"
            android:textColor="@android:color/transparent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_size_b"/>

        <Button
            android:id="@+id/btn_Cancel"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:background="@drawable/box_key_number_selector"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="X" 
            android:textColor="@color/text_color_selector"
            android:textSize="@dimen/text_size_b"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_200"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:background="@drawable/box_key_number_selector"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="$200" 
            android:textColor="@color/text_color_selector"
            android:textSize="@dimen/text_size_m"/>

        <Button
            android:id="@+id/btn_100"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:background="@drawable/box_key_number_selector"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="$100" 
            android:textColor="@color/text_color_selector"
            android:textSize="@dimen/text_size_m"/>

        <Button
            android:id="@+id/btn_50"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:background="@drawable/box_key_number_selector"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="$50"
            android:textColor="@color/text_color_selector"
            android:textSize="@dimen/text_size_m" />

        <Button
            android:id="@+id/btn_10"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:background="@drawable/box_key_number_selector"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="$10" 
            android:textColor="@color/text_color_selector"
            android:textSize="@dimen/text_size_m"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <Button
            android:id="@+id/btn_percent_5"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:background="@drawable/box_key_number_selector"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="5%" 
            android:textColor="@color/text_color_selector"
            android:textSize="@dimen/text_size_m"/>

        <Button
            android:id="@+id/btn_percent_10"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:background="@drawable/box_key_number_selector"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="10%" 
            android:textColor="@color/text_color_selector"
            android:textSize="@dimen/text_size_m"/>

        <Button
            android:id="@+id/btn_percent_15"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:background="@drawable/box_key_number_selector"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="15%"
            android:textColor="@color/text_color_selector"
            android:textSize="@dimen/text_size_m" />

        <Button
            android:id="@+id/btn_percent_20"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:background="@drawable/box_key_number_selector"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="20%" 
            android:textColor="@color/text_color_selector"
            android:textSize="@dimen/text_size_m"/>
    </LinearLayout>

</LinearLayout>