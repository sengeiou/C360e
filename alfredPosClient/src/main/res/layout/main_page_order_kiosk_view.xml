<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame" >
	<LinearLayout
	    android:id="@+id/ll_all_titel"
	    android:layout_width="match_parent"
	    android:layout_height="110dp"
	    android:orientation="vertical"
	    >
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:paddingTop="10dp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tv_table_name_ontop"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/table_name"
			android:textColor="@color/black"
			android:textSize="@dimen/text_size_big"
            android:layout_marginRight="20dp"/>

		<TextView
			android:id="@+id/tv_pax"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
            android:text="0 Pax"
			android:textSize="@dimen/text_size_big"/>
	</LinearLayout>
    <com.alfredbase.view.DashedLine
        android:id="@+id/dl_line_up"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginLeft="2dp" >

        <ImageButton
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="@drawable/icon_name"/>

        <TextView
            android:id="@+id/tv_name_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginLeft="10dp"
            android:text="@string/name"
            android:gravity="left|center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_s_small" />

        <TextView
            android:id="@+id/tv_price_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left|center_vertical"
            android:text="@string/price"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_s_small"/>

        <TextView
            android:id="@+id/tv_qry_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="@string/qty"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_s_small"/>

        <TextView
            android:id="@+id/tv_sutotal_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/subtotal"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_s_small" />

        <TextView
            android:id="@+id/tv_discount_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/disc"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_s_small"/>

        <TextView
            android:id="@+id/tv_total_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/total"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_s_small"/>

    </LinearLayout>

    <com.alfredbase.view.DashedLine
        android:id="@+id/dl_line_down"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_total"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"  >

        <RelativeLayout
            android:id="@+id/rl_total_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="35dp"
            android:layout_toLeftOf="@+id/btn_place_order">
        <com.alfredbase.view.DashedLine
	        android:id="@+id/dl_line_order"
	        android:layout_width="match_parent"
	        android:layout_height="8dp" />

        <LinearLayout
            android:id="@+id/ll_total_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dl_line_order"
            android:orientation="horizontal"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/item"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_sub_total_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/subtotal"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_discount_totle_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/discount"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_taxes_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/taxes"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_total_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_total_name"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_item_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/item"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_sub_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/subtotal"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/discount"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_taxes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/taxes"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_grand_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_total_numbers"
            android:background="@drawable/box_order"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:text="@string/grand_total"
            android:drawablePadding="0dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_place_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/kiosk_box_place_order_selector"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_total"
        android:layout_below="@id/ll_all_titel">

        <com.SlideExpandable.SlideExpandableListView
	        android:id="@+id/lv_order"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@android:color/transparent"
	        android:cacheColorHint="@android:color/transparent"
	        android:divider="@color/white"
	        android:dividerHeight="1dp"
	        android:listSelector="@android:color/transparent"
	        android:overScrollMode="never"
	        android:scrollbars="vertical" />
    	<ImageView
		    android:layout_width="match_parent"
		    android:layout_height="5dp"
		    android:src="@drawable/shadow_up"
		    android:layout_alignParentTop="true"
		    android:scaleType="fitXY"/>
        <ImageView
		    android:layout_width="match_parent"
		    android:layout_height="8dp"
		    android:src="@drawable/shadow_down"
		    android:layout_alignParentBottom="true"
		    android:scaleType="fitXY"/>
    </RelativeLayout>
	<TextView
		android:id="@+id/tv_page_order_mask"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_vertical|center_horizontal"
		android:background="#0eee"
		android:visibility="gone"
		/>
</RelativeLayout>