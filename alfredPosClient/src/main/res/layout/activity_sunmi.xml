<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sunmi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.alfredposclient.com.alfredselfhelp.activity.SunmiActivity">

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:text="@string/sunmi_screen"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="Vice Screen Show Style"/>

    <RadioGroup
        android:id="@+id/sunmi_rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <RadioButton
            android:id="@+id/sunmi_select_picture_rbt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/sunmi_text_selector"
            android:text="Picture in full screen"
            android:textSize="16sp"
            android:background="@drawable/sunmi_bg_selector" />

        <RadioButton
            android:id="@+id/sunmi_select_text_rbt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/sunmi_text_selector"
            android:text="Text in full screen"
            android:background="@drawable/sunmi_bg_selector"
            android:layout_marginLeft="35dp"/>

        <RadioButton
            android:id="@+id/sunmi_select_video_rbt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/sunmi_text_selector"
            android:text="Video in full screen"
            android:background="@drawable/sunmi_bg_selector"
            android:layout_marginLeft="35dp"/>

        <RadioButton
            android:id="@+id/sunmi_select_rbt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/sunmi_text_selector"
            android:text="Show text and pictures"
            android:background="@drawable/sunmi_bg_selector"
            android:layout_marginLeft="35dp"/>

        <RadioButton
            android:id="@+id/sunmi_select_video_text_rbt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/sunmi_text_selector"
            android:text="Show text and Video"
            android:background="@drawable/sunmi_bg_selector"
            android:layout_marginLeft="35dp"/>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="Select Picture Or Video"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/style_url_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/bg_pos_setting"
            android:textSize="16sp"
            android:background="@drawable/style_button_shape"
            android:text="Select Picture"/>

        <Button
            android:id="@+id/style_welcome_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/bg_pos_setting"
            android:textSize="16sp"
            android:background="@drawable/style_button_shape"
            android:text="Select com.alfredselfhelp.activity.Welcome Picture"
            android:layout_marginLeft="30dp"/>

        <Button
            android:id="@+id/style_video_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/bg_pos_setting"
            android:textSize="16sp"
            android:text="Select Video"
            android:background="@drawable/style_button_shape"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>

</LinearLayout>
