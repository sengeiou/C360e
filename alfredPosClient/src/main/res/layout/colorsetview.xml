<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/set_rg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="30dp"
        android:gravity="center_horizontal"
        android:paddingRight="30dp">

        <RadioButton
            android:id="@+id/set_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/picture"
            android:checked="false"
            android:textColor="@color/black"
            android:button="@drawable/radiobutton_selector"
            android:gravity="center_vertical"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/set_color"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:button="@drawable/radiobutton_selector"
            android:text="@string/text"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:textSize="16sp"/>

    </RadioGroup>
<!--



    <TextView
        android:id="@+id/colorPickerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:text="@string/color_select"
        android:textColor="@color/black"
        android:textSize="18sp" >
    </TextView>
-->

    <TextView
        android:id="@+id/colorPickerTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/color_picker_tip"
        android:textSize="14sp"
        android:layout_marginTop="6dp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        >
<LinearLayout
        android:layout_width="250dp"
        android:id="@+id/li_text"

        android:orientation="vertical"

        android:layout_height="wrap_content">
    </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"

            >

            <RadioGroup
                android:id="@+id/set_rg_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"

                android:gravity="center_vertical"
                android:layout_gravity="center"

                android:paddingRight="0dp">

                <RadioButton
                    android:id="@+id/set_big"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/big"
                    android:checked="true"
                    android:textColor="@color/black"
                    android:button="@drawable/radiobutton_selector"
                    android:gravity="center"

                    android:textSize="16sp"/>

                <RadioButton
                    android:id="@+id/set_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="false"
                    android:button="@drawable/radiobutton_selector"
                    android:text="@string/small"
                    android:textColor="@color/black"
                    android:gravity="center"
                  android:layout_marginTop="40dp"
                    android:textSize="16sp"/>

            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ok" />

        <Button
            android:id="@+id/bt_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel" />
    </LinearLayout>

</LinearLayout>