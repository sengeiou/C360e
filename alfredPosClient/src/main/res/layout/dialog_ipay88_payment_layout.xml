<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/other_pament_bg"
    android:orientation="vertical"
    android:padding="24dp">


    <TextView
        android:id="@+id/tv_qrcode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:text="@string/scan_qrcode"
        android:textColor="@color/black1"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/iv_qrcode_ipay88"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tv_qrcode_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:textColor="@color/black1"
        android:textSize="24sp"
        tools:text="$ 1234567" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_qrcode_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/box_number_selector"
            android:text="@string/cancel"
            android:layout_marginRight="8dp"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_qrcode_paid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/box_number_selector"
            android:text="@string/paid"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>


