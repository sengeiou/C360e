<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <View
        android:id="@+id/ll_blank_left"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/ll_blank_right"
        android:layout_toRightOf="@+id/ll_blank_left"
        android:background="@drawable/bg_kitchen_order">

        <RelativeLayout
            android:id="@+id/ll_kot_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_kotId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_kotview"
                android:gravity="center"
                android:padding="5dp"
                android:text="KOT ID"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_table"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/color_kotview"
                android:gravity="center"
                android:padding="5dp"
                tools:text="Table"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_table"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="Order ID"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_s"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_table"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_kiosk_order_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="Order No"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_s" />

                    <TextView
                        android:id="@+id/tv_createTime"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:paddingRight="15dp"
                        android:text="11:20am"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_s" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_kiosk_app_order_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="Online App No"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_s" />

                    <TextView
                        android:id="@+id/tv_order_type"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:paddingRight="15dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_s" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_pos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_pos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="15dp"
                        android:text="POS"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_s" />

                    <TextView
                        android:id="@+id/tv_createDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="15dp"
                        android:text="20/04/2014"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_s" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_orderRemark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp">


                    <TextView
                        android:id="@+id/tv_orderremark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:isScrollContainer="true"
                        android:lineSpacingExtra="3dp"
                        android:maxLines="3"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:scrollbarFadeDuration="3000"
                        android:scrollbarStyle="outsideOverlay"
                        android:scrollbars="vertical"
                        android:singleLine="false"
                        android:text="Order remark:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_s" />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_progress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/color_kotview"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/tv_progress"
                    android:src="@drawable/icon_clock" />

                <Chronometer
                    android:id="@+id/tv_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_s" />

                <TextView
                    android:id="@+id/tv_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Complete"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_s"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

            <LinearLayout
                android:id="@+id/llAction"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/color_kotview">

                <TextView
                    android:id="@+id/complete_all_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Complete All"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/call_num_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Call"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvNext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!--
    <ScrollView 
        android:id="@+id/sv_dishes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_kot_info"
        android:layout_above="@+id/ll_progress">
    
    <LinearLayout 
        android:id="@+id/ll_dishes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
    </LinearLayout>
    </ScrollView>
        -->

        <ListView
            android:id="@+id/lv_dishes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linear_progress"
            android:layout_below="@+id/ll_kot_info" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_kot_info"
            android:background="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/linear_progress"
            android:background="@color/black" />
    </RelativeLayout>

    <View
        android:id="@+id/ll_blank_right"
        android:layout_width="15dp"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@color/white" />

</RelativeLayout>