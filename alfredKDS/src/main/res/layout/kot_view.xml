<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/ll_blank_left"
        android:layout_width="15dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/ll_blank_right"
        android:layout_toRightOf="@+id/ll_blank_left"
        android:background="@drawable/bg_kitchen_order" >

        <RelativeLayout
            android:id="@+id/ll_kot_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_kotId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_kotview"
                android:gravity="center"
                android:padding="5dp"
                android:text="KOT ID"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_b"
                android:visibility="gone" />
            
             <TextView
                android:id="@+id/tv_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_kotview"
                android:gravity="center"
                android:padding="5dp"
                android:text="Table"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_b"/>

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_table"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="Order ID"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_m" 
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_table"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_kiosk_order_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="Order ID"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_m" />

                <TextView
                    android:id="@+id/tv_createTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:paddingRight="15dp"
                    android:text="11:20am"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_m" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_table"
                android:orientation="horizontal"
                android:paddingBottom="5dp" >

                <TextView
                    android:id="@+id/tv_pos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingLeft="15dp"
                    android:text="POS"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_m" />

                <TextView
                    android:id="@+id/tv_createDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="15dp"
                    android:text="20/04/2014"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_m" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_progress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_kotview"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_progress"
                android:src="@drawable/icon_clock" />

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="10:10mins"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_m" />

            <TextView
                android:id="@+id/tv_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Complete"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_m"
                android:visibility="gone" />
        </RelativeLayout>

        <!--
    <ScrollView 
        android:id="@+id/sv_dishes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_kot_info"
        android:layout_above="@+id/ll_progress">
    
    <LinearLayout 
        android:id="@+id/ll_dishes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
    </LinearLayout>
    </ScrollView>
        -->

        <ListView
            android:id="@+id/lv_dishes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_progress"
            android:layout_below="@+id/ll_kot_info" >
        </ListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_kot_info"
            android:background="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/ll_progress"
            android:background="@color/black" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_blank_right"
        android:layout_width="15dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>