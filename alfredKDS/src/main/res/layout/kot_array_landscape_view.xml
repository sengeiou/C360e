      <RelativeLayout
          android:id="@+id/ll_lan_progress"
          android:layout_width="120dp"
          android:layout_height="match_parent"

          android:background="@color/color_kotview"
          android:gravity="center" >

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_toLeftOf="@+id/tv_progress"
              android:src="@drawable/icon_clock"
              android:layout_marginRight="8dp"/>

          <Chronometer
              android:id="@+id/tv_lan_progress"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textColor="@color/white"
              android:textSize="@dimen/text_size_s"
              android:layout_centerInParent="true"/>

          <TextView
              android:id="@+id/tv_complete"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="Complete"
              android:textColor="@color/white"
              android:textSize="@dimen/text_size_s"
              android:layout_centerInParent="true"
              android:visibility="gone" />
      </RelativeLayout>

      <View
          android:layout_width="1dp"

          android:layout_height="match_parent"

          android:background="@color/black"
          >
      </View>

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1.4"
    android:minHeight="60dp"
    android:orientation="vertical"
     android:gravity="center_horizontal"
    >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tv_kot_detail"
      android:textColor="@color/black"
      android:paddingLeft="5dp"
      android:paddingRight="5dp"
      android:layout_marginTop="5dp"
      />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:textColor="@color/black"
    android:text=""
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:textSize="12sp"
    android:id="@+id/tv_kot_mod"
    />

</LinearLayout>
      <View
          android:layout_width="1dp"
          android:layout_height="match_parent"

          android:background="@color/black"
          >
      </View>


      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:id="@+id/tv_kot_item_qty"
          android:layout_gravity="center"
          android:gravity="center"
          android:layout_weight="0.4"
          android:textColor="@color/black"
          android:text="1"
          />

      <View
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/black"
          >
      </View>
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:id="@+id/tv_kot_item_status"
          android:layout_gravity="center"
          android:gravity="center"
          android:layout_weight="0.6"
          android:textColor="@color/black"
          android:text="正在做"
          />

      <View
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/black"
          >
      </View>


      <TextView
          android:id="@+id/tv_kot_item_table"
          android:layout_width="0dp"
          android:layout_height="16dp"
          android:layout_gravity="center"
          android:layout_weight="0.7"
          android:gravity="center"
          android:text="桌号"
          android:textColor="@color/black" />

      <View
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/black"
          >
      </View>


      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1.5"
          >
          <TextView
              android:layout_width="65dp"
              android:layout_height="wrap_content"
              android:id="@+id/tv_kot_item_orderno"
              android:layout_gravity="center_vertical"
              android:gravity="center"
              android:text="111"
              android:textColor="@color/black"
              android:layout_margin="5dp"

              />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_gravity="center"
              android:layout_marginRight="5dp"
              >

              <Button
                  android:id="@+id/btn_kot_complete"
                  android:layout_width="0dp"
                  android:layout_height="50dp"
                  android:layout_gravity="center_vertical"
                  android:layout_weight="1"
                  android:textColor="@color/white"
                  android:background="@color/color_kotview"
                  android:text="complete" />
      <Button
    android:id="@+id/btn_kot_call"
    android:layout_width="0dp"
    android:layout_height="50dp"
          android:layout_weight="1"
    android:layout_marginLeft="10dp"
    android:layout_gravity="center_vertical"
    android:text="@string/call"
          android:textColor="@color/white"
    android:background="@color/color_kotview"
    />
          </LinearLayout>
      </LinearLayout>


  </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        ></View>
</LinearLayout>
