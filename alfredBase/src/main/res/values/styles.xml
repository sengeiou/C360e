    <style name="SubActivityAnimation" parent="@android:style/Animation.Activity">

        <!-- activity打开，新activity打开的动画 (表示新的activity创建进入效果) -->
        <item name="android:activityOpenEnterAnimation">@anim/slide_bottom_in</item>
        <!-- activity打开，当前activity隐藏的动画 （表示activity还没有finish下退出效果） -->
        <item name="android:activityOpenExitAnimation">@anim/anim_null</item>
        <!-- 关闭当前activity，新进入activity的动画 （表示上一个activity返回进入效果） -->
        <item name="android:activityCloseEnterAnimation">@anim/anim_null</item>
        <!-- 关闭当前activity，当前activity的动画 （表示activityfinish之后退出效果） -->
        <item name="android:activityCloseExitAnimation">@anim/anim_null</item>
    </style>

