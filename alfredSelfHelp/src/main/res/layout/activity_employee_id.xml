<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_box">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_re_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="@string/reconnect_pos"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_login_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="8dp"
                android:text="@string/login"
                android:textColor="@color/white"
                android:layout_marginBottom="30dp"
                android:textSize="@dimen/text_size_b" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"

                android:layout_marginLeft="@dimen/spacing"
                android:layout_marginRight="@dimen/spacing"
                android:background="@drawable/style_dialog_btn"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/tv_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="@string/incorrect_pwd"
                    android:textColor="@color/red2"
                    android:textSize="36sp"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"

                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_id_1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:hint="-"
                        android:paddingTop="15dp"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/p45" />

                    <TextView
                        android:id="@+id/tv_id_2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:hint="-"
                        android:paddingTop="15dp"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/p45" />

                    <TextView
                        android:id="@+id/tv_id_3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:hint="-"
                        android:paddingTop="15dp"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/p45" />

                    <TextView
                        android:id="@+id/tv_id_4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:hint="-"
                        android:paddingTop="15dp"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/p45" />

                    <TextView
                        android:id="@+id/tv_id_5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:hint="-"
                        android:paddingTop="15dp"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/p45" />
                </LinearLayout>

            </LinearLayout>

            <com.alfredselfhelp.view.Numerickeyboard
                android:id="@+id/employee_id_keyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120dp"></com.alfredselfhelp.view.Numerickeyboard>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp">

            <TextView
                android:id="@+id/tv_app_version"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/version"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_s" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>