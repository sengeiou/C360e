<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp">


    <LinearLayout
        android:id="@+id/ll_login_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_rest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_b"/>

        <TextView
            android:id="@+id/tv_login_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/waiter_login_tips2"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_m" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_psw_1"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="-"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_b" />

            <TextView
                android:id="@+id/tv_psw_2"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="-"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_b" />

            <TextView
                android:id="@+id/tv_psw_3"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="-"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_b" />

            <TextView
                android:id="@+id/tv_psw_4"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="-"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_b" />

            <TextView
                android:id="@+id/tv_psw_5"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="-"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_b" />
        </LinearLayout>
    </LinearLayout>

    <com.alfredbase.view.Numerickeyboard
        android:id="@+id/view_numerickeyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_login_tips"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">
    </com.alfredbase.view.Numerickeyboard>

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        android:background="@drawable/box_key_number_selector"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_color_selector"
        android:textSize="@dimen/text_size_m"
        android:layout_alignLeft="@id/view_numerickeyboard"
        android:layout_alignRight="@id/view_numerickeyboard"
        android:layout_below="@+id/view_numerickeyboard"
        android:text="@string/logout"/>
</RelativeLayout>