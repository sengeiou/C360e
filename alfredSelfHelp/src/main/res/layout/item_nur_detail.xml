<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:gravity="center"
    android:orientation="vertical">


    <!--<android.support.v7.widget.CardView-->
    <!--tools:targetApi="lollipop"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->

    <!--android:layout_marginLeft="8dp"-->
    <!--android:layout_marginRight="8dp"-->
    <!--android:layout_marginBottom="8dp"-->
    <!--android:clickable="true"-->
    <!--android:foreground="?android:attr/selectableItemBackground"-->
    <!--app:cardCornerRadius="4dp"-->
    <!--app:cardUseCompatPadding="true"-->

    <!--app:cardPreventCornerOverlap="false">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView

                android:id="@+id/tv_nur_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_modifier_name"
                android:layout_marginTop="3dp"

                android:ellipsize="end"
                android:maxLines="1"
                android:text="aaaaaaaaaaaaaaa"
                android:textColor="@color/gray1"
                android:textSize="28sp"


                />

            <TextView
                android:id="@+id/tv_nur_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/takeaway"
                android:textColor="@color/green"
                android:textSize="18sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"


            >

            <TextView
                android:id="@+id/tv_nur_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="1X "
                android:textColor="@color/gray3"
                android:textSize="24sp" />

            <TextView

                android:id="@+id/tv_nur_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_modifier_de"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"

                android:layout_marginRight="0dp"
                android:background="@drawable/style_price_btn"

                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="S$50.00"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"

                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"></View>
</LinearLayout>

